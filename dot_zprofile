# --------------------------------------------------
#  PATH VARIABLE
# --------------------------------------------------

# Set PATH, MANPATH, etc., for Homebrew.
eval "$(/opt/homebrew/bin/brew shellenv)"

# Setting PATH for Python 3.11
# The original version is saved in .zprofile.pysave
PYTHON_311="/Library/Frameworks/Python.framework/Versions/3.11/bin"

# Setting PATH for Python 3.8
# The original version is saved in .zprofile.pysave
PYTHON_38="/Library/Frameworks/Python.framework/Versions/3.8/bin"


# Setting PATH for TEXLIVE
TEX="/usr/local/texlive/2023/bin/universal-darwin/"

# Setting PATH for JetBrains Toolbox
JETBRAINS="/Users/tariktornes/Library/Application Support/JetBrains/Toolbox/scripts"

# Setting PATH for Spark
SPARK="/opt/spark/bin"

# Setting PATH for Anaconda
ACONDA="/opt/homebrew/anaconda3/bin"


PATH="$PATH:$PYTHON_38:$TEX:$PYTHON_311:$JETBRAINS:$SPARK:$ACONDA"
export PATH



# --------------------------------------------------
# JAVA VARIABLE 
# --------------------------------------------------

export JAVA_HOME=$(/usr/libexec/java_home)



# --------------------------------------------------
# EDITOR VARIABLE
# --------------------------------------------------
export EDITOR=nvim

